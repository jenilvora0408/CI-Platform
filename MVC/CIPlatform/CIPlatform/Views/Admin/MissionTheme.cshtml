@model Entities.ViewModels.CMS

<div class="cms">
    <!-- Navbar -->
    <partial name="_AdminNavbar" model="Model.Navbar_1" />

    <!-- Sidebar -->
    <partial name="_AdminSidebar" />

    <div class="cms-content">
        @if (TempData["error"] != null)
        {
            <div id="successMessage" class="alert alert-danger">@TempData["error"]</div>
            <script>
                setTimeout(function() {
                $('#successMessage').fadeOut('slow');
                }, 5000);
            </script>
            @TempData.Remove("error")
            ;
        }
        <p class="heading"><span>Mission Theme Page</span></p>
        <div class="content-line mt-4">
            <div class="search">
                <img src="/images/search.png" alt="" />
                <input id="searchThemeData" type="text" placeholder="Search" />
            </div>
            <div class="add">
                <button data-bs-toggle="modal" data-bs-target="#hello2" type="submit"><i class="bi bi-plus"></i> Add</button>
            </div>
        </div>
        <div id="themeTable"></div>

    </div>
</div>

<div class="modal fade" id="hello2" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Add Theme
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="addTheme" asp-controller="Admin">
                    <label>Theme</label>
                    <input type="text" asp-for="@Model.missionTheme.Title" class="form-control m-0 mb-3">

                    <label class="mt-3">Status</label>
                    @Html.DropDownListFor(model => Model.missionTheme.Status, new SelectList(new Dictionary<bool, string> { {false, "Inactive" }, {true, "Active"} }, "Key", "Value"), "Select status", new { @class = "form-control", @required="required" })
                    @Html.ValidationMessageFor(model => model.missionTheme.Status, "", new { @class = "text-danger" })


                    <div class="modalBtn" style="display: flex; align-items: center; justify-content: center; gap: 10px;">
                        <button id="cancel-mission-theme"
                                style="padding: 8px 18px; border-radius: 23px; background: #fff; color: #333333; border: 2px solid #adadad;"
                                type="reset">
                            Cancel
                        </button>
                        <button id="DeleteBtn" style="padding: 8px 18px; border-radius: 23px; background: #fff; color: #f88634; border: 2px solid #f88634;" type="submit">Save</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="hello" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <p class="fs-4" style="text-align: center;">Are you sure you want to delete this item?</p>
                    <div class="modalBtn" style="display: flex; align-items: center; justify-content: center; gap: 10px;">
                        <button style="padding: 8px 18px; border-radius: 23px; background: #fff; color: #333333; border: 2px solid #adadad;" type="reset">Cancel</button>
                        <button @*onclick="deleteTheme()"*@ id="confirm-delete" style="padding: 8px 18px; border-radius: 23px; background: #fff; color: #f88634; border: 2px solid #f88634;" type="submit">Delete</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

<script>
    $("#cancel-mission-theme").on("click", function(e){
        location.reload();
    })
    function getTable(){
            $.ajax({
            type: "GET",
            dataType: "html",
            url: "/Admin/themeTable",
            success: function (data) {
                $("#themeTable").html("");
                $("#themeTable").html(data);
            },
            error: function (xhr, status, error) {
                alert("Something went wrong");
            }
       });
        }

    $(document).ready(function () {
        getTable();

         // Search
        $("#searchThemeData").on("keyup", function(e){
            var search = $(this).val();
            $.ajax({
            type: "POST",
            dataType: "html",
            url: "/Admin/themeTable",
            data: {Search: search},
            success: function (data) {
                console.log("Search succedded");
                $("#themeTable").html("");
                $("#themeTable").html(data);
            },
            error: function (xhr, status, error) {
                alert("Something went wrong in adding data");
            }
       });
        })

        // Color Change - Sidebar
        $(".cms-sidebar ul li").on("mouseenter", function () {
            $(this).find("i").css("color", "#F88634");
            $(this).find("span").css("color", "#F88634");
        });
        $(".cms-sidebar ul li").on("mouseleave", function () {
            if (!$(this).hasClass("active")) {
                $(this).find("i").css("color", "#fff");
                $(this).find("span").css("color", "#fff");
            }
        });
        $(".cms-sidebar ul li").on("click", function () {
            $(".cms-sidebar ul li").removeClass("active");
            $(".cms-sidebar ul li i").css("color", "#fff");
            $(".cms-sidebar ul li span").css("color", "#fff");
            $(this).addClass("active");
            $(this).find("i").css("color", "#F88634");
            $(this).find("span").css("color", "#F88634");
        });

        // Hide & Show Sidebar
        $("#sidebar-open").hide();
        $("#sidebar-close").hide();

        $(window).resize(function () {
            if ($(window).width() < 960) {
                $(".cms-sidebar").hide();
                $("#sidebar-open").show();
                $("#sidebar-close").hide();
            } else {
                $(".cms-sidebar").show();
                $("#sidebar-open").hide();
            }
        });
    });

    // Open & Close Button - Sidebar
    $("#sidebar-open").on("click", function (e) {
        $(".cms-sidebar").show();
        $("#sidebar-open").hide();
        $("#sidebar-close").show();
    });

    $("#sidebar-close").on("click", function (e) {
        $(".cms-sidebar").hide();
        $("#sidebar-close").hide();
        $("#sidebar-open").show();
    });
</script>
