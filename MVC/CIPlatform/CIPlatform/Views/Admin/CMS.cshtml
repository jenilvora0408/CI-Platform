                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model.cmsPage)
                {
                    <tr>
                        <td class="desc">
                            @item.Title
                        </td>
                        <td class="actives">Active</td>
                        <td class="icons">
                            <i id="edit-icon" class="bi bi-pencil-square"></i>
