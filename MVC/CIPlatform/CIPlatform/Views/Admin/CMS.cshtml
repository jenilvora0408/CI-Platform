    <script>
        // Table - Partial View
            function getTable(){
                $.ajax({
                type: "GET",
                dataType: "html",
                url: "/Admin/CmsTable",
                success: function (data) {
                    $("#cmsTable").html("");
                    $("#cmsTable").html(data);
                },
                error: function (xhr, status, error) {
                    alert("Somwthing went wrong");
                }
           });
            }

        $(document).ready(function () {
            getTable();

            
            
            // Search
            $("#searchCmsData").on("keyup", function(e){
                var search = $(this).val();
                $.ajax({
                type: "POST",
                dataType: "html",
                url: "/Admin/CmsTable",
                data: {Search: search},
                success: function (data) {
                    console.log("Search succedded");
                    $("#cmsTable").html("");
                    $("#cmsTable").html(data);
                },
                error: function (xhr, status, error) {
                    alert("Somwthing went wrong in adding data");
                }
           });
            })

            // Color Change - Sidebar
            $(".cms-sidebar ul li").on("mouseenter", function () {
                $(this).find("i").css("color", "#F88634");
                $(this).find("span").css("color", "#F88634");
            });
            $(".cms-sidebar ul li").on("mouseleave", function () {
                if (!$(this).hasClass("active")) {
                    $(this).find("i").css("color", "#fff");
                    $(this).find("span").css("color", "#fff");
                }
            });
            $(".cms-sidebar ul li").on("click", function () {
                $(".cms-sidebar ul li").removeClass("active");
                $(".cms-sidebar ul li i").css("color", "#fff");
                $(".cms-sidebar ul li span").css("color", "#fff");
                $(this).addClass("active");
                $(this).find("i").css("color", "#F88634");
                $(this).find("span").css("color", "#F88634");
            });
            
            // Hide & Show Sidebar
            $("#sidebar-open").hide();
            $("#sidebar-close").hide();

            $(window).resize(function () {
                if ($(window).width() < 960) {
                    $(".cms-sidebar").hide();
                    $("#sidebar-open").show();
                    $("#sidebar-close").hide();
                } else {
                    $(".cms-sidebar").show();
                    $("#sidebar-open").hide();
                }
            });
        });

        // Open & Close Button - Sidebar
        $("#sidebar-open").on("click", function (e) {
            $(".cms-sidebar").show();
            $("#sidebar-open").hide();
            $("#sidebar-close").show();
        });

        $("#sidebar-close").on("click", function (e) {
            $(".cms-sidebar").hide();
            $("#sidebar-close").hide();
            $("#sidebar-open").show();
        });
    </script>
