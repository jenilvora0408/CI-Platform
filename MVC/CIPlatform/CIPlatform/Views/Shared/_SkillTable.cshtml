@model Entities.ViewModels.CMS

<div id="tblOverflow" style="overflow-x: scroll;">
            <table class="table">
                <thead>
                    <tr style="white-space: nowrap;">
                        
                        
						<th scope="col">Skill Name</th>
						
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model.Skills)
                    {
                        <tr>
							
                        <td>
                            @item.SkillName
                        </td>
                        
                        <td class="icons">
                            <i onclick="return location.href=' @Url.Action("EditSkill","Admin",new {SkillId=@item.SkillId}) '" id="edit-icon" class="bi bi-pencil-square"></i>
                            <img data-id="@item.SkillId" data-bs-toggle="modal" data-bs-target="#hello" id="delete-icon" class="delete-img"
							src="/images/bin.png" alt="" />
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>


<div class="pagination justify-content-end mt-3" style="gap:7px;">
	@if(Model.PageCount > 0 && Model.PageCount != 1){
	@if(Model.CurrentPage > 1){
	<button style="padding: 3px 8px;background: white;color: #f88634;border: 2px solid #f88634;" id="prev-btn" >&laquo;</button>}
	@for(int i = 1; i <= Model.PageCount; i++) {
		<button style="padding: 3px 8px;background: white;color: #f88634;border: 2px solid #f88634;" class="page-btn" @if(Model.CurrentPage == i){<text>disabled</text>}>@i</button>
	}
	@if(Model.CurrentPage != Model.PageCount){<button style="padding: 3px 8px;background: white;color: #f88634;border: 2px solid #f88634;" id="next-btn">&raquo;</button>}
	}
</div>


<script>
	
	

	$('table').on('click', '.delete-img', function () {
    var deleteID = $(this).data('id');
    $('#confirm-delete').on('click', function () {
        $.ajax({
            type: "POST",
            url: "/Admin/deleteSkill",
            data: { skillId: deleteID },
            success: function (data) {
                location.reload();
                alert("Record Deleted.");
            },
            error: function (xhr, status, error) {
                alert("Record Not Deleted.");
            }
        });
    });
});
	
	
	$(function () {
		var currentPage = @Model.CurrentPage;
		var pageCount = @Model.PageCount;
		
		$(".page-btn").click(function () {
			var page = $(this).text();
			var text = $("#searchSkillData").val();
			if (page != currentPage) {
				$.ajax({
					type: 'GET',
					url: '/Admin/skillTable',
					dataType: 'html',
					data: {search:text,pageNumber:page},
					success: function (data) {
						$('#skillTable').html("");
						$('#skillTable').html(data);
					},
					error: function (xhr, status, error) {
						console.log(error);
					}
				});
			}
		});
		
		$("#prev-btn").click(function () {
			var prevPage = currentPage - 1;
			var text = $("#searchSkillData").val();
			if (prevPage >= 1) {
				$.ajax({
					type: 'GET',
					url: '/Admin/skillTable',
					dataType: 'html',
					data: {search:text,pageNumber:prevPage},
					success: function (data) {
						$('#skillTable').html("");
						$('#skillTable').html(data);
					},
					error: function (xhr, status, error) {
						console.log(error);
					}
				});
			}
		});
		
		$("#next-btn").click(function () {
			var nextPage = currentPage + 1;
			var text = $("#searchSkillData").val();
			if (nextPage <= pageCount) {
				$.ajax({
					type: 'GET',
					url: '/Admin/skillTable',
					dataType: 'html',
					data: {search:text,pageNumber:nextPage},
					success: function (data) {
						$('#skillTable').html("");
						$('#skillTable').html(data);
					},
					error: function (xhr, status, error) {
						console.log(error);
					}
				});
			}
		});
	});
	
</script>