@using Entities.Models
@model List<Comment>
@foreach (var item in Model)
{
    <div class="card mb-3">
        <div class="row g-0 ">
            <div class="col-sm-2 float-start d-flex align-items-center">
                <img style="height:80px;" src="@item.User.Avatar"
                     class="img-fluid border rounded-circle mx-4" alt="...">
            </div>
            <div class="col-sm-10 float-end p-0 m-0">
                <div class="card-body comment p-0 m-0">
                    <h5 class="card-title">@item.User.FirstName</h5>
                    <p class="card-text">
                        <small class="text-muted">
                            Last updated @item.CreatedAt.ToShortTimeString() mins
                            ago
                        </small>
                    </p>
                    <p class="card-text">@item.CommentText</p>
                </div>
            </div>
        </div>
    </div>
}